<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#363636">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <EditText
            android:id="@+id/findingBarID_homefrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#585858"
            android:fontFamily="@font/roboto"
            android:inputType="text|textNoSuggestions"
            android:padding="12dp"
            android:text="@string/tim_kiem"
            android:textColor="#AEAEAE" />

        <GridLayout
            android:id="@+id/gridlayoutID"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="2">
            <ImageView
                android:id="@+id/thicatrungID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/thitcatrung1"/>
            <ImageView
                android:id="@+id/traidayID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/traicay1"/>
            <ImageView
                android:id="@+id/raucuID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/raucu1"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/suaID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/sua1"/>
        </GridLayout>
        <ImageView
            android:id="@+id/tatcaID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/tatca1"/>
    </LinearLayout>


    <fragment
        android:id="@+id/navigationbarID_homefrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/navigation_bar_fragment" />
</RelativeLayout>