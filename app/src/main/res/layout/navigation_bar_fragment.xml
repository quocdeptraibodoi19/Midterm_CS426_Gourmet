<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:columnCount="4"
    android:background="#585858"
    android:rowCount="1">

    <ImageView
        android:id="@+id/homeIconId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/tranchuchu" />

    <ImageView
        android:id="@+id/shopIconId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/cuahangchu" />

    <ImageView
        android:id="@+id/recipeIconId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/congthucchu" />

    <ImageView
        android:id="@+id/transactionIconId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/donhangchu" />
</GridLayout>