<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/carted_product_id"
        android:layout_width="90dp"
        android:layout_height="90dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/carted_product_name_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/carted_product_id"
        android:fontFamily="@font/playfair_display"
        android:text="@string/title"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/carted_product_price_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carted_product_name_ID"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/carted_product_id"
        android:fontFamily="@font/roboto"
        android:text="@string/title"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/carted_minus_id"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/minus"
        android:layout_toLeftOf="@id/cart_product_number_id"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/cart_product_number_id"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/carted_plus_id"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:text="1" />
    <ImageView
        android:id="@+id/carted_plus_id"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/plus"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>