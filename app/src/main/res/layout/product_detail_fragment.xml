<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:background="#363636">

    <ImageView
        android:id="@+id/productImageId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/productNameI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productImageId"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/playfair_display"
        android:text="@string/title"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productPriceID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productNameI"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto"
        android:text="@string/title"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productDescriptionID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productPriceID"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/description"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/minusID"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/productDescriptionID"
        android:layout_toLeftOf="@+id/numberproductID"
        android:src="@drawable/minus" />

    <TextView
        android:id="@+id/numberproductID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productDescriptionID"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@+id/plusID"
        android:fontFamily="@font/roboto"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/plusID"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/productDescriptionID"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/plus" />

    <Button
        android:id="@+id/cartingButtonID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/minusID"
        android:layout_marginTop="12dp"
        android:text="Them Vao Gio Hang"
        android:textColor="#000000"
        android:fontFamily="@font/roboto"
        android:backgroundTint="#F4CD2A"
        android:textAllCaps="false" />


</RelativeLayout>